[user]
    name = Sander Bongers
    email = sander@bonge.rs
    signingkey = ~/.ssh/id_ed25519.pub
[github]
    user = sanderbongers
[core]
    autocrlf = input
    excludesfile = ~/.gitignore
    longpaths = true
    pager = delta
[init]
    defaultBranch = main
[alias]
    a = add
    b = branch
    ba = branch -a
    cm = commit -m
    co = checkout
    cob = checkout -b
    ds = diff --staged
    l = log --graph --pretty=format:'%C(auto)%h%d %s %C(black)%C(bold)%cr %C(blue)%an%Creset' --color=always --abbrev-commit --date=relative
    ls = log --graph --pretty=format:'%C(auto)%h%d %s %C(black)%C(bold)%cr %C(blue)%an%Creset' --color=always --abbrev-commit --date=relative --stat
    p = push
    pl = pull --no-rebase
    s = status -sb
    sh = show
[commit]
    gpgsign = true
[pull]
    rebase = true
[fetch]
    prune = true
[log]
    date = relative
[push]
    autoSetupRemote = true
[tag]
    sort = -version:refname
[diff]
    colorMoved = default
[gpg]
    format = ssh
[delta]
    diff-so-fancy = true
    file-decoration-style = "ol"
    hunk-header-style = "omit"
    line-numbers = true
    navigate = true
[include]
    path = ~/.gitconfig.local
