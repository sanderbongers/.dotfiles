[user]
    name = Sander Bongers
    email = sander@bonge.rs
    signingkey = ~/.ssh/id_ed25519.pub
[github]
    user = sanderbongers
[core]
    longpaths = true
    autocrlf = input
    excludesfile = ~/.gitignore
    pager = delta
[init]
    defaultBranch = main
[alias]
    cm = commit -m
    co = checkout
    cob = checkout -b
    ds = diff --staged
    l = log --graph --pretty=format:'%C(auto)%h%d %s %C(black)%C(bold)%cr %C(blue)%an%Creset' --color=always --abbrev-commit --date=relative
    ls = log --graph --pretty=format:'%C(auto)%h%d %s %C(black)%C(bold)%cr %C(blue)%an%Creset' --color=always --abbrev-commit --date=relative --stat
    p = push
    pl = pull
    s = status -sb
    sh = show
[commit]
    gpgsign = true
[pull]
    rebase = true
[fetch]
    prune = true
[log]
    date = relative
[push]
    autoSetupRemote = true
[gpg]
    format = ssh
[interactive]
    diffFilter = delta --color-only
[delta]
    navigate = true
    line-numbers = true
[merge]
    conflictstyle = diff3
[diff]
    colorMoved = default
[include]
    path = ~/.gitconfig.local
